<h1>Expenses Index</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Date Spent</th>
    <th>Amount</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>
  <% @expenses.each do |expense| %>
  <tr>
    <td><%= expense.expense_name %></td>
    <td><%= expense.date_spent %></td>
    <td><%= expense.amount %></td>
    <td><%= link_to 'Show', expense_path(expense.id) %></td>
    <td><%= link_to 'Edit', edit_expense_path(expense.id) %></td>
    <td><%= link_to 'Destroy', expense_path(expense.id), :method => :delete, :confirm => "Are you sure?" %></td>
    </tr>
  <% end unless @expenses.blank? %>

  <% if @expenses.blank? %>
    <tr>
      <td class="no-data" colspan="3">No Data</td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Expense', new_expense_path  %>
